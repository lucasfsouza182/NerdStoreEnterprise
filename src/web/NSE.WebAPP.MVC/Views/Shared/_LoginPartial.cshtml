@using NSE.WebAPP.MVC.Extensions
@inject IUser AppUser

<ul class="navbar-nav">
    @if (AppUser.IsAuthenticated())
    {
        <li class="nav-item">
            <a class="nav-link text-dark" title="Manage">Hello @AppUser.GetUserEmail()</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Auth" asp-action="Logout">Logout</a>
        </li> }
    else
    {
        <li class="nav-item" style="padding-right: 30px;">
            <a class="btn btn-success" asp-controller="Auth" asp-action="Signin">Sign in</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary" asp-controller="Auth" asp-action="Login">Login</a>
        </li>
    }
</ul>